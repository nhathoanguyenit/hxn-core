  "scripts": {
    "build": "nest build",
    "build:user": "nest build user",
    "build:chat": "nest build chat",
    "build:file": "nest build file",
    "build:all": "npm run build:user && npm run build:chat && npm run build:file",
    "start": "nest start",
    "start:user": "nest start user",
    "start:chat": "nest start chat",
    "start:file": "nest start file",
    "start:dev": "nest start --watch",
    "start:dev:user": "nest start --watch user",
    "start:dev:chat": "nest start --watch chat",
    "start:dev:file": "nest start --watch file",
    "start:debug": "nest start --debug --watch",
    "start:debug:user": "nest start --debug --watch user",
    "start:debug:chat": "nest start --debug --watch chat",
    "start:debug:file": "nest start --debug --watch file",
    "lint": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"{apps,libs}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:user": "jest --config ./apps/user/test/jest-e2e.json",
    "test:e2e:chat": "jest --config ./apps/chat/test/jest-e2e.json",
    "test:e2e:file": "jest --config ./apps/file/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
